@*@{
    Layout = "_LayoutAccount";
}*@

@{
    var routeController = ViewContext.RouteData.Values["controller"].ToString(); 
    var pages = new List<string> { "Account" };    
    if (pages.Any(routeController.Contains))
    {
        Layout = "~/Areas/Admin/Views/Shared/_LayoutAccount.cshtml";
    }
    else
    {
        Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    }
}
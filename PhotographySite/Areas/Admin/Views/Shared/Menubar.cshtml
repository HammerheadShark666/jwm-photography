@model List<PhotographySite.Dto.Response.GalleryResponse>
<nav class="sidebar show">
    <div class="text">
        <a class="menu-title" href="/admin">PhotographySite.com</a>
    </div>
    <ul class="main_side menu">
        <li data-menu-level-index="1"><a href="/admin">Home</a></li>
        <li>
            <a href="#" id="2">
                Photos
                <span class="fas fa-caret-down"></span>
            </a>
            <ul class="item-show-2">
                <li data-menu-level-index="2.1"><a href="/admin/photo/import">Import</a></li>
                <li data-menu-level-index="2.2"><a href="/admin/photo/catalog">Catalogue</a></li>
            </ul>
        </li>
        <li data-menu-level-index="3">
            <a href="#" id="3">
                Galleries
                <span class="fas fa-caret-down"></span>
            </a>
            <ul class="item-show-3 menu-galleries-list">
                <li data-menu-level-index="0"><a id="new-gallery" href="#">New Gallery...</a></li>
                @foreach (var gallery in Model)
                {
                    <li data-menu-level-index="3.@gallery.Id"><a class="gallery-anchor" href="/admin/gallery/@gallery.Id">@gallery.Name</a></li>
                }
            </ul>
        </li>
        <li data-menu-level-index="4"><a href="/admin/montage">Montage</a></li>
        <li>
            @using (Html.BeginForm("LogOff", "Account"))
            {
                <input type="submit" class="btn btn-default logout" value="Log out" />
            }
        </li>
    </ul>
    
</nav>

@await Html.PartialAsync("../Gallery/_NewGalleryModal")